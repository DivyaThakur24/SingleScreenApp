<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/back_pink">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SPORTS CLUB"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:padding="4dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:background="@color/cardview_shadow_end_color"/>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    android:layout_margin="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SPORT #1"
                        android:textSize="20sp"
                        android:layout_gravity="top"
                        android:textColor="#6677ee"
                        android:textStyle="bold"
                        android:padding="6dp"
                        android:background="#dfd9d9d9"
                        android:textAlignment="center"/>

                    <ImageView
                        android:id="@+id/lawn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/lawn_tennis"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LAWN TENNIS"
                        android:textSize="20sp"
                        android:layout_gravity="bottom"
                        android:textColor="#6677ee"
                        android:padding="6dp"
                        android:textStyle="bold"
                        android:background="#dfd9d9d9"
                        android:textAlignment="center"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    android:layout_margin="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text="SPORT #2"
                        android:textSize="20sp"
                        android:textColor="#6677ee"
                        android:textStyle="bold"
                        android:padding="6dp"
                        android:background="#dfd9d9d9"
                        android:textAlignment="center"/>

                    <ImageView
                        android:id="@+id/foot"
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/football"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="FOOTBALL"
                        android:textSize="20sp"
                        android:padding="6dp"
                        android:textColor="#6677ee"
                        android:textStyle="bold"
                        android:background="#dfd9d9d9"
                        android:textAlignment="center"/>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    android:layout_margin="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text="SPORT #3"
                        android:textSize="20sp"
                        android:textColor="#6677ee"
                        android:textStyle="bold"
                        android:padding="6dp"
                        android:background="#dfd9d9d9"
                        android:textAlignment="center"/>

                    <ImageView
                        android:id="@+id/swim"
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/football"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="SWIMMING"
                        android:textSize="20sp"
                        android:padding="6dp"
                        android:textColor="#6677ee"
                        android:textStyle="bold"
                        android:background="#dfd9d9d9"
                        android:textAlignment="center"/>

                </android.support.v7.widget.CardView>


            </LinearLayout>

    </ScrollView>
