<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/sports_club"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="CITY SPORTS CLUB"
        android:pointerIcon="crosshair"
        android:drawableLeft="@drawable/ic_pages_black_24dp"
        android:drawablePadding="8dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="65 555 677"
        android:pointerIcon="crosshair"
        android:drawableLeft="@drawable/ic_settings_phone_black_24dp"
        android:drawablePadding="8dp"
        android:padding="16dp"
        android:autoLink="phone"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="me@sportsclub.com"
        android:pointerIcon="crosshair"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawablePadding="8dp"
        android:padding="16dp"
        android:autoLink="email"
        app:layout_constraintTop_toBottomOf="@id/phone"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="69/50 Kamal Udyog, Civil Lines, Ajmer, Rajasthan 305001"
        android:pointerIcon="crosshair"
        android:drawableLeft="@drawable/ic_pin_drop_black_24dp"
        android:drawablePadding="8dp"
        android:padding="16dp"
        android:autoLink="map"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:textSize="20sp" />


</android.support.constraint.ConstraintLayout>